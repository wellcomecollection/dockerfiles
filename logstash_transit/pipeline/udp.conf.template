input {
    udp {
        port => 514
        codec => json
    }

    tcp {
        port => 5142
        codec => json
    }

    heartbeat {}
}

filter {
  json {
    source => "message"
  }
}

output {
    elasticsearch {
        hosts    => "${ES_HOST}"
        user     => "${ES_USER}"
        password => "${ES_PASS}"
        ssl      => true
    }

    stdout {}
}